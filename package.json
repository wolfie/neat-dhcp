{
  "name": "neat-dhcpd",
  "version": "0.0.0",
  "license": "ISC",
  "engines": {
    "node": "20.10.0",
    "pnpm": ">=8"
  },
  "private": true,
  "scripts": {
    "dev": "concurrently pnpm:dev:*",
    "dev:db": "pnpm --filter \"@neat-dhcpd/db\" dev",
