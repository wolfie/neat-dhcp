    "dev:web-ui": "pnpm --filter \"@neat-dhcpd/web-ui\" dev",
    "test": "pnpm run --filter ./packages/* test"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
